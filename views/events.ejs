<% include partials/header %>    

<div class="container" style="background:orange; border:2px solid black; margin-top:100px; padding:20px;">
    <h2><b> <%= data.user %> </b> this is your event list for <%=data.month%>/<%=data.date%>/<%=data.year%></h2>
</div>


 <div class="container">
 <% UpdatedData.forEach(function(details){ %>
    <div style="background:orange; border:2px solid black; margin-top:20px; padding:15px; " >
     <p><strong>Title:-</strong>   <%= details.title %></p>
     <hr>
     <p><strong>Description:-</strong>   <%= details.description %></p>
     <hr>
     <p><strong>Start Time:-</strong>   <%= details.start_time %></p>
     <hr>
     <p><strong>End Time:-</strong>   <%= details.end_time %></p>
    </div>
 <% }); %>
 </div>

  <div class="container" style="width: 10%; margin-top:10px; margin-bottom:60px;  margin:150 auto;  padding:50px;" >

            <form action="/add_event"   method="POST">
                    <div class="form-group">
                        <input type="hidden" value= "<%=data.user%>" name="user">
                        <input type="hidden" value= "<%=data.month%>" name="month">
                        <input type="hidden" value= "<%=data.date%>" name="date">
                        <input type="hidden" value= "<%=data.year%>" name="year">
                        <button class="btn btn-warning">Add Event!</button>      
                    </div>
            </form>
  </div>

<% include partials/footer %>     